<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider_imgProduct"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_corner_topleft"
                android:elevation="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_DanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_item_red"
                    android:drawablePadding="10dp"
                    android:elevation="16dp"
                    android:fontFamily="@font/semi_bold"
                    android:padding="10dp"
                    android:text="5.0"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_baseline_star_rate_24" />


                <TextView
                    android:id="@+id/tv_tenSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Burger Bo"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvGiaSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/segoe_ui"
                    android:text="35.000đ"
                    android:textColor="@color/color_button"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tv_moTaSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/segoe_ui"
                    android:maxLength="300"
                    android:text="Mo ta"
                    android:textColor="#6A6A6A"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/semi_bold"
                    android:text="Add ons"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:orientation="horizontal">

                    <ImageButton

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/bg_item"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cat_4" />

                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/bg_item"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cat_5" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/igb_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_round_btn"
        android:padding="10dp"
        android:src="@drawable/back_icon" />

    <Button
        android:id="@+id/btnThemVaoGio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_item_red"
        android:fontFamily="@font/semi_bold"
        android:padding="5dp"
        android:text="Thêm vào giỏ hàng"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />
</FrameLayout>