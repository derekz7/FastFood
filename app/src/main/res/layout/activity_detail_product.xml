<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider_imgProduct"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_corner_topleft"
                android:elevation="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_DanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_item_red"
                    android:drawablePadding="10dp"
                    android:elevation="16dp"
                    android:fontFamily="@font/semi_bold"
                    android:padding="10dp"
                    android:text="5.0"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:drawableStartCompat="@drawable/ic_baseline_star_rate_24" />


                <TextView
                    android:id="@+id/tv_tenSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/segoe_ui_bold"
                    android:text="Burger Bo"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvGiaSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/segoe_ui"
                    android:text="35.000đ"
                    android:textColor="@color/color_button"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/semi_bold"
                    android:text="Mua thêm đồ uống"
                    android:textColor="@color/grey_font"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_Coca"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/bg_item"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/coca" />

                        <TextView
                            android:id="@+id/tv_Coca"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="+5000đ"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btn_Pepsi"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/bg_item"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/pepsi" />

                        <TextView
                            android:id="@+id/tv_Pepsi"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="+7000đ"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:elevation="16dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@android:color/transparent"
                        android:elevation="16dp"
                        app:cardCornerRadius="500dp">

                        <ImageView
                            android:id="@+id/img_shopAvatar"
                            android:layout_width="50dp"

                            android:layout_height="50dp"
                            android:src="@drawable/avataruser" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_tenShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/semi_bold"
                            android:text="shopName"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_NhanShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_item_red"
                            android:backgroundTint="#FF5722"
                            android:paddingHorizontal="10dp"
                            android:text="Partner"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_XemShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xem shop"
                            android:textColor="@color/color_button"
                            android:textSize="18sp"
                            android:drawableTint="@color/color_button"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:drawableEndCompat="@drawable/ic_baseline_navigate_next_24" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:elevation="16dp"
                    android:background="@color/white"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/semi_bold"
                        android:maxLength="300"
                        android:text="Mô tả sản phẩm"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_moTaSP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/segoe_ui"
                        android:maxLength="300"
                        android:text="Mo ta"
                        android:textColor="#6A6A6A"
                        android:textSize="20sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/igb_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_round_btn"
        android:padding="10dp"
        android:src="@drawable/back_icon" />

    <Button
        android:id="@+id/btnThemVaoGio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_item_red"
        android:fontFamily="@font/semi_bold"
        android:padding="5dp"
        android:text="Thêm vào giỏ hàng"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />
</FrameLayout>